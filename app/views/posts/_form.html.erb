<%= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Post</legend>

    <%= f.input :title, :input_html => { class: 'span6' } %>
    <%= f.input :body,  :input_html => { class: 'span6', rows: 3 } %>
    <%= f.input :notify %>
    <%= f.input :email, :input_html => { class: 'span3' } %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', posts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
